<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/uxNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/uxListImage"
        android:layout_toRightOf="@+id/uxListImage"
        android:text="Name:"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uxPriceLabel"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uxShotCountLabel"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/uxListPrice"
        android:layout_toLeftOf="@+id/uxListPrice"
        android:layout_toEndOf="@+id/uxListImage"
        android:layout_toRightOf="@+id/uxListImage"
        android:text="Price:"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/uxListImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/uxListItemName"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/uxListImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/uxNameLabel"
        android:layout_toRightOf="@+id/uxNameLabel"
        android:text="TextView" />

    <TextView
        android:id="@+id/uxListItemCount"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uxListItemName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/uxShotCountLabel"
        android:layout_toRightOf="@+id/uxShotCountLabel"
        android:text="TextView" />

    <TextView
        android:id="@+id/uxListPrice"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uxListItemCount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/uxShotCountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uxNameLabel"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/uxListImage"
        android:layout_toRightOf="@+id/uxListImage"
        android:text="Shot Count: "
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />
</RelativeLayout>